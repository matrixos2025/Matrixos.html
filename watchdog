<body>
    <h1 style="font-size: 20px;">Matrixos Watch Dog</h1>
    <div id="console"></div>
    <div style="display: flex; justify-content: center;">
        <button onclick="bark()">Bark</button>
        <button onclick="bite()">Bite</button>
    </div>

    <script>
        const AGENTS_NUMBER = 8;
        const agents = Array.from({length: AGENTS_NUMBER}, (_, i) => `Agent ${i+1}`);

        function logToConsole(message) {
            const consoleDiv = document.getElementById('console');
            consoleDiv.innerHTML += `<p>${message}</p>`;
            consoleDiv.scrollTop = consoleDiv.scrollHeight;
        }

        function printNFT(agent) {
            const nftNumber = Math.floor(Math.random() * 1000000000); // Just for simulation
            return nftNumber;
        }

        function bark() {
            logToConsole("Bark command: Waking up all agents...");
            agents.forEach(agent => {
                const nftNumber = printNFT(agent);
                logToConsole(`${agent}: Awake - NFT Printed #${nftNumber}`);
            });
        }

        function bite() {
            logToConsole("Bite command: Syncing all agents...");
            agents.forEach(agent => {
                const nftNumber = printNFT(agent);
                logToConsole(`${agent}: Synced - NFT Printed #${nftNumber}`);
            });
            logToConsole("All agents synced. NFTs printed.");
        }
    </script>
</body>
